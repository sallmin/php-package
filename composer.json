{
    "name": "sallmin/php-package",
    "description": "This is my package php-package",
    "keywords": [
        "sallmin",
        "php-package"
    ],
    "homepage": "https://github.com/sallmin/php-package",
    "license": "MIT",
    "authors": [
        {
            "name": "sallminrexha",
            "email": "you@example.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Sallmin\\PhpPackage\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sallmin\\PhpPackage\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
